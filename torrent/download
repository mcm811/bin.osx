#!/bin/bash

source /usr/local/torrent/download_torrent.sh
[ "$(basename $0 | cut -d_ -f 1)" == "local" ] && set_server_local || set_server_config

function link_file() {
        cd /usr/local/torrent
        for FILE in download*; do
                FILE=$(echo $FILE | sed -e 's/local_//g')
                ln -sfv /usr/local/torrent/$FILE /usr/local/bin/$FILE
        done
}

if [ "$1" == "purge" ]; then
        shift
        purge_torrent $@
        exit
fi

if [ "$1" == "rebuild" ]; then
        shift
        . /usr/local/torrent/download_rebuild_torrent.sh $@
        exit
fi

if [ "$1" == "link" ]; then
        link_file
        exit
fi

if [ "$1" == "sync" ]; then
        [ "$(hostname)" == "rasPi" ] && ssh changmin@192.168.0.7 "/usr/local/torrent/download sync" && exit

        SRC_PATH="$HOME/Google Drive/ShellScript/TorrentBin"
        TRG_PATH=/usr/local/torrent

        #ssh root@r1 "tar cvzf ~pi/torrent/etc.tgz -C /etc ."
        #scp root@r1:~pi/torrent/etc.tgz $HOME/Archives.localized/raspberryPi/

        #backup rasPi1 /etc
        rsync -aCzv -e ssh --delete root@r1:/etc/ $HOME/Archives.localized/raspberryPi/etc

        #backup pi@rasPi1:~/
        #rsync -azv -e ssh --delete pi@r1:~/ $HOME/Archives.localized/raspberryPi/homePi
        rsync -azv -e ssh --delete pi@r1:~/bin $HOME/Archives.localized/raspberryPi/homePi
        rsync -azv -e ssh --delete pi@r1:~/src $HOME/Archives.localized/raspberryPi/homePi
        rsync -azv -e ssh --delete pi@r1:~/tor $HOME/Archives.localized/raspberryPi/homePi

        rsync -auzv -e ssh "$SRC_PATH/cron_torrent_"* root@r1:/etc/cron.d/
        rsync -auzv -e ssh root@r1:/etc/cron.d/cron_torrent_* "$SRC_PATH"/

        rsync -aCzv -e ssh --delete "$SRC_PATH/" root@r1:$TRG_PATH
        rsync -aCzv -e ssh --delete "$SRC_PATH/" pi@r1:tor

        rsync -aCzv --delete "$SRC_PATH/" $TRG_PATH
        rsync -aCzv --delete "$SRC_PATH/" $HOME/bin/torrent

        ssh root@r1 "chown -v root:root /etc/cron.d/cron_torrent_*"
        . ~changmin/bin/backup_rsync.sh

        exit
fi

if [ "$1" == "synclink" ]; then
        link_file
        ssh root@r1 /usr/local/torrent/download link
        exit
fi

if [ $# -eq 0 ]; then
        download_torrent_help
        read -p "검색할 토렌트 이름을 입력하세요:" searchTorrent
        [ "$searchTorrent" != "" ] && download_torrent "$searchTorrent"
        purge_torrent
elif [ "$(echo "$@" | cut -d: -f1)" == "magnet" ]; then
        add_magnet -a $@
        purge_torrent
else
        download_torrent $@
        purge_torrent
fi
